AuthType Basic
AuthName "adminer authentication"
AuthUserFile {ABSOLUTE_DIR_PATH}/.htpasswd
order deny,allow
require valid-user
satisfy any
deny from all
#allow from 127.0.0.1

# Enable URL rewriting
RewriteEngine On
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]